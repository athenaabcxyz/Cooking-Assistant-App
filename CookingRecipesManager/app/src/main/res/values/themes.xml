<resources>
    <!-- Base application theme. -->
    <style name="Theme.CookingRecipesManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="YOURSTYLE.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
</resources>